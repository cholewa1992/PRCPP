#!/bin/bash
case "$1" in

	clean)
		rm -f *-jbec.zip
		;;

        [1-9])
                if [ -d "prcpp-week0$1" ]; then
                        mkdir -p prcpp-week0$1-jbec/src
                        find prcpp-week0$1 -name "*.java" | xargs -I{} cp {} ./prcpp-week0$1-jbec/src/
                        find prcpp-week0$1 -name "answers.txt"  | xargs -I{} cp {} ./prcpp-week0$1-jbec/
                        find ./prcpp-week0$1-jbec -maxdepth 1 -name "*.txt" | xargs -I{} zip -m prcpp-week0$1-jbec.zip {}
                        find ./prcpp-week0$1-jbec/src -maxdepth 1 -name "*.java"  | xargs -I{} zip -m prcpp-week0$1-jbec.zip {}
                        rm -r prcpp-week0$1-jbec
                else
                        echo "prcpp-week0$1 is not a valid directory"
                fi
		;;
	*)
		for n in {1..10} 	
		do
			if [ -d "prcpp-week0$n" ]; then
				mkdir -p prcpp-week0$n-jbec/src
				find prcpp-week0$n -name "*.java" | xargs -I{} cp {} ./prcpp-week0$n-jbec/src/
				find prcpp-week0$n -name "answers.txt"  | xargs -I{} cp {} ./prcpp-week0$n-jbec/
				find ./prcpp-week0$n-jbec -maxdepth 1 -name "*.txt" | xargs -I{} zip -m prcpp-week0$n-jbec.zip {}
				find ./prcpp-week0$n-jbec/src -maxdepth 1 -name "*.java"  | xargs -I{} zip -m prcpp-week0$n-jbec.zip {}
				rm -r prcpp-week0$n-jbec
			else
				break	
			fi
		done
		;;
esac
